{
  "name": "@vedantnimbarte/node-logger",
  "version": "1.0.0",
  "description": "A generic logger for all Xendit node applications",
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint --ignore-path .eslintignore --ext .ts,.js .",
    "lint:fix": "eslint --ignore-path .eslintignore --ext .ts,.js --fix .",
    "test": "jest --runInBand",
    "prebuild": "rm -rf dist",
    "build": "tsc",
    "prepublishOnly": "npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js,json}": [
      "prettier --write"
    ],
    "*.{ts,js}": [
      "eslint"
    ]
  },
  "files": [
    "dist/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vedantnimbarte/node_logger.git"
  },
  "author": "Xendit",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/vedantnimbarte/node_logger/issues"
  },
  "homepage": "https://github.com/vedantnimbarte/node_logger#readme",
  "devDependencies": {
    "@types/express": "^4.17.6",
    "@types/flush-write-stream": "^1.0.0",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.9.5",
    "@types/split2": "^2.1.6",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "body-parser": "^1.19.0",
    "eslint": "^6.7.2",
    "eslint-config-airbnb-typescript": "^6.0.0",
    "eslint-config-prettier": "^6.5.0",
    "eslint-plugin-filenames": "^1.3.2",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "^3.1.2",
    "express": "^4.17.1",
    "flush-write-stream": "^2.0.0",
    "husky": "^4.2.5",
    "jest": "^25.2.4",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.1.6",
    "prettier": "^1.18.2",
    "split2": "^3.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.3.0",
    "typescript": "^3.8.3"
  },
  "dependencies": {
    "pino": "^7.8.0",
    "pino-http": "^6.6.0",
    "pino-pretty": "^4.0.0"
  }
}
